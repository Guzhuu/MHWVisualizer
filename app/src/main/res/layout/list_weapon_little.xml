<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:background="@drawable/weapons_little_border"
    android:layout_marginRight="3dp">

    <ImageView
        android:id="@+id/ivImgArma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/weapon" />

    <RelativeLayout android:id="@+id/rvNombreArma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginLeft="2dp">

        <TextView android:id="@+id/tvNombreArma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="Nombre de arma 3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/textAppearance"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llDanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/rvNombreArma">

        <TextView
            android:id="@+id/tvDanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="2dp"
            android:text="Danho"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/textAppearance" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvElementos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rvElemento2"
            android:layout_width="98dp"
            android:layout_height="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivElemento2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@drawable/fuego" />

            <TextView
                android:id="@+id/tvElemento2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/ivElemento2"
                android:gravity="right"
                android:text="Elemento2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/fuego" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="89dp"
            android:layout_height="22dp"
            android:layout_below="@id/rvElemento2"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivElemento"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@drawable/hielo" />

            <TextView
                android:id="@+id/tvElemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@id/ivElemento"
                android:gravity="right"
                android:text="Elemento"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/hielo" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView android:id="@+id/ivRarezaArma"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon" />

</RelativeLayout>